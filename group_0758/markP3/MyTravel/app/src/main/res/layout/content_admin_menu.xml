<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:columnWidth="90dp"
    android:numColumns="3"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="16dp"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:backgroundTint="#ADFF2F"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".AdminMenuActivity"
    tools:showIn="@layout/activity_admin_menu">

    <Button
        android:layout_height="120dp"
        android:layout_width="100dp"
        android:layout_gravity="center"
        android:background="#80FFBB33"
        android:text="Search/Book Itineraries"
        android:onClick="openItineraryMenu"/>

    <Button
        android:layout_height="120dp"
        android:layout_width="100dp"
        android:layout_gravity="right|center_vertical"
        android:background="#8099CC00"
        android:text="Search,\n Edit, or\nUpload Client"
        android:onClick="retrieveClient"/>

    <Button
        android:layout_height="120dp"
        android:layout_width="100dp"
        android:layout_gravity="left|center_vertical"
        android:background="#8033B5E5"
        android:text="Search,\n Edit, or\nUpload Flights"
        android:onClick="openFlight"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrator"
        android:layout_gravity="left|top"
        android:textSize="30dp"
        android:id="@+id/welcome_text"
        />
    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="right|top"
        android:background="#FFD8D8D8"
        android:text="Save and\nLog out"
        android:onClick="logOut"
        />
</FrameLayout>
