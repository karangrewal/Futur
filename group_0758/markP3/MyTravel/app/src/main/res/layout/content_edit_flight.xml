<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Flight"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:textSize="30sp"
        android:id="@+id/title" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Flight Number"
        android:textSize="20sp"
        android:layout_below="@+id/title"
        android:layout_marginTop="40dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Eg. 423"
        android:id="@+id/flight_number"
        android:layout_below="@+id/title"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Departure Time"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/flight_number" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="YYYY-MM-DD HH:MM"
        android:id="@+id/departure_time"
        android:layout_below="@+id/flight_number"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arrival Time"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/departure_time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="YYYY-MM-DD HH:MM"
        android:id="@+id/arrival_time"
        android:layout_below="@+id/departure_time"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Airline"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/arrival_time" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Eg. Air Canada"
        android:id="@+id/airline"
        android:layout_below="@+id/arrival_time"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Origin"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/airline" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Eg. Toronto"
        android:id="@+id/origin"
        android:layout_below="@+id/airline"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Destination"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/origin" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Eg. Seattle"
        android:id="@+id/destination"
        android:layout_below="@+id/origin"
        android:layout_marginLeft="150dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Price"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/destination" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Eg. 100"
        android:id="@+id/price"
        android:layout_below="@+id/destination"
        android:layout_marginLeft="150dp"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save Changes"
        android:onClick="saveChanges"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"/>
</RelativeLayout>