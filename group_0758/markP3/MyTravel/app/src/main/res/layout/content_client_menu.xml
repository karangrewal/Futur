<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
    android:columnWidth="60dp"
    android:numColumns="2"
    android:gravity="center"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:showIn="@layout/activity_client_menu"
    tools:context="com.csc207.group0758.mytravel.ClientMenuActivity">


    <Button
        android:layout_height="160dp"
        android:layout_width="160dp"
        android:layout_gravity="center|left"
        android:background="#8033B5E5"
        android:text="Search Flights"
        android:textSize="22dp"
        android:onClick="openFlightMenu"/>

    <Button
        android:layout_height="160dp"
        android:layout_width="160dp"
        android:layout_gravity="center|right"
        android:background="#80FFBB33"
        android:text="Search/Book Itineraries"
        android:textSize="22dp"
        android:onClick="openItineraryMenu"/>

    <Button
        android:layout_height="160dp"
        android:layout_width="160dp"
        android:layout_gravity="bottom|left"
        android:background="#8099CC00"
        android:text="View Booked Itineraries"
        android:textSize="22dp"
        android:onClick="viewBookedItineraries" />

    <Button
        android:layout_height="160dp"
        android:layout_width="160dp"
        android:layout_gravity="bottom|right"
        android:background="#ebb4f7"
        android:text="Account Information"
        android:textSize="22dp"
        android:onClick="viewEditInfo"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome!"
        android:layout_gravity="left"
        android:textSize="25dp"
        android:id="@+id/welcome_text"/>

    <Button
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_gravity="top|right"
        android:background="#FFD8D8D8"
        android:text="Save and\nLog out"
        android:onClick="logOut"
        />

</FrameLayout>